{
  "name": "No HN Comments",
  "version": "1.0",
  "description": "Comments on HN posts have gotten ridiculous. This hides them.",

  "icons": {
  	"16": "icon16.png",
  	"48": "icon48.png",
  	"128": "icon128.png"
  },

  "content_scripts": [
  	{
  		"matches": ["http://news.ycombinator.com/*"],
  		"js": ["script.js"]
  	}
  ]
}